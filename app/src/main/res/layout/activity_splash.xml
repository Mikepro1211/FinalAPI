<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:foregroundGravity="center"
        android:src="@drawable/universidad_don_bosco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_NameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="448dp"
        android:text="@string/app_name"
        android:textSize="75dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_Integrante1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Integrante1"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:text="@string/Integrante1"
        app:layout_constraintBottom_toTopOf="@+id/txtIntegrante3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_NameApp" />

    <TextView
        android:id="@+id/txtIntegrante2"
        android:layout_width="127dp"
        android:layout_height="122dp"
        android:text="@string/Integrante2"
        app:layout_constraintBottom_toBottomOf="@+id/txtIntegrante3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtIntegrante3"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginBottom="73dp"
        android:text="Luis Lovo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Integrante1" />

</androidx.constraintlayout.widget.ConstraintLayout>